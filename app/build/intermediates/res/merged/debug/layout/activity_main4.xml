<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/bkgrd_redlogin1"
    tools:context="com.example.arnoldkom.sms.Main4Activity"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/home"/>
    <TextView
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="87sp"
        android:textStyle="bold"
        android:hint="SAFE HOME BOMEN"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:layout_marginTop="11dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bkgd_red_2"
            android:orientation="vertical">
            <TextView
                android:textColorHint="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37sp"
                android:textStyle="bold"
                android:hint="Bievenue a votre systeme de domotique"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>



        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="140sp"
        android:layout_marginLeft="8sp"
        android:background="@drawable/background_4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <TextView
                android:textColorHint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"

                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="19sp"
                android:hint="Salon"

                android:layout_below="@+id/user"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/change"
                android:text="ON"
                android:id="@+id/lumiere1on"
                android:layout_below="@+id/rappel"
                android:textColor="#f16f7d"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="8dp"
                android:textSize="18sp" />
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login_two"
                android:text="OFF"
                android:layout_below="@+id/valider1"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:id="@+id/lumiere1of"
                android:layout_marginLeft="110dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="-50dp"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="260sp"
        android:layout_marginLeft="8sp"
        android:background="@drawable/bouton2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <TextView
                android:textColorHint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40sp"

                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="19sp"
                android:hint="Chambre"

                android:layout_below="@+id/user"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login"
                android:text="ON"
                android:id="@+id/chambreon"
                android:layout_below="@+id/rappel"
                android:textColor="#f16f7d"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="8dp"
                android:textSize="18sp" />
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login_two"
                android:text="OFF"
                android:layout_below="@+id/valider1"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:id="@+id/chambreof"
                android:layout_marginLeft="110dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="-50dp"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="140sp"
        android:layout_marginLeft="190sp"
        android:background="@drawable/bouton3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <TextView
                android:textColorHint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="19sp"
                android:hint="Portail"

                android:layout_below="@+id/user"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login"
                android:text="ON"
                android:id="@+id/autreon"
                android:layout_below="@+id/rappel"
                android:textColor="#f16f7d"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="8dp"
                android:textSize="18sp" />
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login_two"
                android:text="OFF"
                android:layout_below="@+id/valider1"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:id="@+id/autreof"
                android:layout_marginLeft="100dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="-50dp"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="260sp"
        android:layout_marginLeft="190sp"
        android:background="@drawable/bouton5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <TextView
                android:textColorHint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="19sp"
                android:hint="Alarme"

                android:layout_below="@+id/user"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login"
                android:text="ON"
                android:id="@+id/alarmeon"
                android:layout_below="@+id/rappel"
                android:textColor="#f16f7d"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="8dp"
                android:textSize="18sp" />
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_login_two"
                android:text="OFF"
                android:layout_below="@+id/valider1"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:id="@+id/alarmeof"
                android:layout_marginLeft="100dp"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="-50dp"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>


    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="précédent"
        android:layout_below="@+id/valider1"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/precedent"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_marginTop="500dp"
        android:textSize="18sp" />

</RelativeLayout>